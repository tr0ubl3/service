<table class="event-table">
	<tbody>
		<tr>
			<td colspan="4">
				Evaluation
			</td>
		</tr>
		<tr>
			<td>Evaluator</td>
			<td><%= evaluator_full_name(event.evaluator) %></td>
			<td>Date</td>
			<td><%= date_format(event.states.where(:state => "evaluated").first.created_at, time: true) %></td>
		</tr>
		<% if event.evaluation_description? %>
			<tr>
				<td colspan="4">
					Details
				</td>			
			</tr>
			<tr>
				<td colspan="4" class="event-description">
					<%= event.evaluation_description %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>

<% if event.service_event_files.length > 0 %>
	<table class="event-table">
		<tbody>
			<tr>
				<td colspan="4">
					Event files
				</td>
			</tr>

				<% event.service_event_files.each_slice(4) do |set| %>
					<tr>	
						<% set.each do |file| %>
								<td class="with-content">
									<%= thumbnail_assign(file) %>
								</td>
						<% end %>
					</tr>
				<% end %>
		</tbody>
	</table>
<% end %>	