<div class="container user" style="margin-top: 80px;">
	<%= form_for(@login, {html: { class: "form-signin" }, :url => sessions_path}) do |f| %>
	<h2 class="form-signin-heading">Please sign in</h2>

	  <%= f.email_field :email, :autofocus => true, :class => "input-block-level", :placeholder => "email" %>
	  <%= f.password_field :password, :class => "input-block-level", :placeholder => "password" %>


	<div><%= f.submit "Sign in", :class => "btn btn-large btn-primary" %></div>
	<ul class="nav nav-pills">
		<!-- <p style='display: inline-block;'>Not registered?</p> -->
			<li><%= link_to "Create an account ...", '/signup' %></li>
			<li><%= link_to "Forgot your password?", password_reset_users_path %></li>
	</ul>
	<% end %>
</div>