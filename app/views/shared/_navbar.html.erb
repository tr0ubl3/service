<div class="navbar navbar-inverse navbar-fixed-top">
	<div class="navbar-inner">
		<div class="container-fluid">
			<%= link_to "Service", root_path, :class => "brand brand-custom" %>
			<div class="nav-collapse collapse">
				<div class="dropdown pull-right navbar-text">
					<% if current_user.admin? %>				
						<div class="admin_notifications navbar-text">
							<% if pending_events > 0 %>
								<%= link_to service_events_path, :class => 'service_events_pending', :title => "#{pending_events} "+"event".pluralize(pending_events)+" pending confirmation" do %>
									<span class='badge badge-important'>
										<i class='icon icon-warning-sign'></i> <%= pending_events %>
									</span>
								<% end %>
							<% end %>
							<% if pending_users > 0 %>
								<%= link_to manage_users_path, :class => "users_pending", title: "#{pending_users} "+"user".pluralize(pending_users)+" pending confirmation" do %>
									<span class='badge badge-info'>
										<i class='icon-user'></i> <%= pending_users %>
									</span>
								<% end %>
							<% end %>
						</div>
					<% end %>
					<div class="user_menu dropdown">
						Logged in as <%= link_to(current_user.full_name, '#', :class => "navbar-text navbar-link dropdown-toggle", :data => { :toggle => "dropdown"}) %>
						<ul class="dropdown-menu" role="menu">
							<li><%= link_to(raw("<i class='icon-wrench'></i>")+' Account settings', edit_user_path(current_user)) %></li>
							<% if current_user.admin? %>
								<li><%= link_to(raw("<i class='icon-cog'></i>")+' Control panel', control_panel_general_index_path) %></li>
							<% end %>
							<li><%= link_to(raw("<i class='icon-off'></i>")+' Logout', logout_path) %></li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>