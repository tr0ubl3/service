<h1><%= @user.full_name %> details</h1>
<div class="btn-group">
	<a href="#" class="btn dropdown-toggle" data-toggle="dropdown">
		User approval
		<span class="caret"></span>
	</a>
	<ul class="dropdown-menu">
		<li><%= link_to 'Approve registration', approve_user_path(@user, approve: "true") %></li>
		<li><%= link_to 'Deny registration', approve_user_path(@user, approve: "false") %></a></li>
	</ul>

</div>
<dl class="dl-horizontal">
	<dt>First name</dt>
	<dd><%= @user.first_name %></dd>

	<dt>Last name</dt>
	<dd><%= @user.last_name %></dd>

	<dt>Phone number</dt>
	<dd><%= @user.phone_number %></dd>

	<dt>Email</dt>
	<dd><%= @user.email %></dd>

	<dt>Firm</dt>
	<dd><%= @user.firm_id %></dd>

	<dt>Registered at</dt>
	<dd><%= @user.created_at %></dd>

	<dt>Approved at at</dt>
	<dd><%= @user.approved_at || "nil" %></dd>

	<dt>Denied at</dt>
	<dd><%= @user.denied_at || "nil" %></dd>

	<dt>Login count</dt>
	<dd><%= @user.login_count %></dd>
</dl>